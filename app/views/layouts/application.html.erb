<!DOCTYPE html>
<html>
  <head>
    <title>DevExercise</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="search">
        <%= form_tag search_path, :method => 'post' do %>
           <%= text_field_tag :search, params[:search] %>
          <%= submit_tag "Search for Organization", name: nil %> 
        <% end %>
       
      </div>
    </header>
    <% if current_user %>
      <!-- current_user will return true if a user is logged in -->
      <%= "Logged in as #{current_user.email}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log Out', logout_path, method: :delete %>
    <% else %>
      <!-- not logged in -->
      <%= link_to 'Home', root_path %> | <%= link_to 'Log In', login_path %> or <%= link_to 'Sign Up', new_account_path %>
    <% end %>
    <hr>
    <% if notice %>
      <%= notice %>
    <% end %>
    
    <% if alert %>
      <%= alert %>
    <% end %>
    <%= yield %>
  </body>
</html>
